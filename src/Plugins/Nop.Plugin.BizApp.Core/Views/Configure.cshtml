@model ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="BizAppAdmin" asp-action="Configure" method="post" id="configuration-form">
    <div class="cards-group">
        <div class="card card-default no-margin">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="BizAppApiUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BizAppApiUrl" />
                        <span asp-validation-for="BizAppApiUrl"></span>
                    </div>
                </div>
                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
            </div>
        </div>
    </div>
</form>